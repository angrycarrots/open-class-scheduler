{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "dist/types",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "stripInternal": true
  },
  "include": [
    "src/index.ts",
    "src/App.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**",
    "src/integration/**"
  ]
}
